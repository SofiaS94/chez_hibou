{% extends 'layout.html.twig' %}
{% block sideNav %}
    
<div class="d-flex">
		<div class="d-flex">
			<!-- Sidebar -->
			<nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
				<div class="position-sticky">
					<div class="list-group list-group-flush mx-3 mt-4">
						<a href="item/entrees" class="list-group-item list-group-item-action py-2 ripple" aria-current="true">
							<i class="fas fa-tachometer-alt fa-fw me-3"></i>
							<span>Entrées</span>
						</a>
						<a href="item/platschauds" class="list-group-item list-group-item-action py-2 ripple">
							<i class="fas fa-chart-area fa-fw me-3"></i>
							<span>Plats chauds</span>
						</a>
						<a href="#" class="list-group-item list-group-item-action py-2 ripple">
							<i class="fas fa-lock fa-fw me-3"></i>
							<span>Plats froids</span>
						</a>
						<a href="#" class="list-group-item list-group-item-action py-2 ripple">
							<i class="fas fa-chart-line fa-fw me-3"></i>
							<span>Salades</span>
						</a>
						<a href="#" class="list-group-item list-group-item-action py-2 ripple">
							<i class="fas fa-chart-pie fa-fw me-3"></i>
							<span>Petits plaisirs</span>
						</a>
						<a href="#" class="list-group-item list-group-item-action py-2 ripple">
							<i class="fas fa-chart-bar fa-fw me-3"></i>
							<span>Desserts</span>
						</a>
						<a href="#" class="list-group-item list-group-item-action py-2 ripple">
							<i class="fas fa-globe fa-fw me-3"></i>
							<span>Boissons</span>
						</a>
					</div>
				</div>
			</nav>
		</div>

{% endblock %}

	{% block content %}
		<div class="d-flex">
			<div class="d-flex flex-column align-items-center">
				<h1>Nos produits</h1>
				<div class="container py-4 d-flex flex-column justify-content-start gap-4">
					<div class="row">
						{% for item in items %}
							<div class="col-sm-4 mb-4">
								<div class="card h-100">
									<div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
										<img
										src={{item.picture}} class="img-fluid card-img-top" style="object-fit: cover; max-height: 200px"/>
										<!-- Ajouter la classe card-img-top pour gérer la hauteur de la carte, et utiliser object-fit: cover pour conserver les proportions d'origine de l'image -->
										<a>
											<div class="mask" style="background-color: rgba(251, 251, 251, 0.15)"></div>
										</a>
									</div>
									<div class="card-body">
										<h5 class="card-title">{{item.name}}</h5>
										<p class="card-text">
											{{item.description}}
										</p>
										<a href="#" class="btn btn-primary">Ajouter au panier</a>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	{% endblock %}
